<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.speedata.speakercheck.test.MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:background="#CDC9A5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="   对讲机"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content" />

        <Button

            android:textSize="15dp"
            android:layout_gravity="center"
            android:background="#CDC9A5"
            android:text="退出"
            android:layout_margin="5dp"
            android:id="@+id/back_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp" />



    </LinearLayout>
    <EditText
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:isScrollContainer="true"
        android:scrollbarStyle="insideOverlay"
        android:hint="[显示窗口]\n显示收发的串口指令以及反馈信息"
        android:id="@+id/displaywindow_et"
        android:layout_width="fill_parent"
        android:gravity="top"
        android:background="#ffffff"
        android:layout_height="0dp"
        android:layout_weight="4"
        />


    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#CDC9A5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="1dp">
        <ToggleButton

            android:id="@+id/toggleButton_power"
            android:background="#DEB887"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textOn="@string/Togopen_on"
            android:textOff="@string/Togopen_off"/>



        <Button
            android:id="@+id/vol_sub"
            android:layout_margin="5dp"
            android:background="@drawable/login_button_selector"
            android:text="vol-"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/vol_add"
            android:layout_margin="5dp"
            android:background="@drawable/login_button_selector"
            android:text="vol+"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ToggleButton

            android:id="@+id/toggleButton_speaker"
            android:background="#DEB887"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textOn="结束发送语音"
            android:textOff="开始发送语音"/>


    </LinearLayout>

    <LinearLayout
        android:background="#CDC9A5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <Button
            android:layout_margin="5dp"
            android:background="@drawable/login_button_selector"
            android:id="@+id/set_moni_btn"
            android:text="设置模拟组"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />
        <Button
            android:layout_margin="5dp"
            android:background="@drawable/login_button_selector"
            android:id="@+id/set_shuzi_btn"
            android:text="设置数字组"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />


    </LinearLayout>

    <LinearLayout
        android:background="#CDC9A5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <Button

            android:layout_margin="5dp"
            android:background="@drawable/login_button_selector"
            android:id="@+id/query_moni_btn"
            android:text="查询模拟组设置"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />
        <Button

            android:layout_margin="5dp"
            android:background="@drawable/login_button_selector"
            android:id="@+id/query_shuzi_btn"
            android:text="查询数字组设置"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />


    </LinearLayout>

    <LinearLayout
        android:background="#CDC9A5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <Button

            android:layout_margin="5dp"
            android:background="@drawable/login_button_selector"
            android:id="@+id/test"
            android:text="测试(模拟09)"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />
        <Button

            android:layout_margin="5dp"
            android:background="@drawable/login_button_selector"
            android:id="@+id/new_speaker"
            android:text="新对讲机界面"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />


    </LinearLayout>

    <LinearLayout
        android:background="#CDC9A5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <Button

            android:layout_margin="5dp"
            android:background="@drawable/login_button_selector"
            android:id="@+id/clean_window"
            android:text="清屏"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />
        <Button

            android:layout_margin="5dp"
            android:background="@drawable/login_button_selector"
            android:id="@+id/btn_version"
            android:text="版本信息"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />


    </LinearLayout>


    </LinearLayout>

