<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_speaker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.speedata.speakercheck.activity.SpeakerActivity">

   <TextView
       android:text="配置信息"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />




    <LinearLayout
        android:background="#CDC9A5"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ToggleButton

            android:id="@+id/toggleButton_power"
            android:background="#DEB887"
            android:layout_width="1dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textOn="@string/Togopen_on"
            android:textOff="@string/Togopen_off"/>

        <TextView
            android:textSize="15sp"
            android:id="@+id/tv_channel"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dip"
            android:layout_marginStart="5dip"
            android:layout_weight="1"
            android:text="@string/channel"
            />
        <Spinner
            android:id="@+id/sp_channel"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_channel" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/vol_sub"
            android:layout_margin="5dp"
            android:background="@drawable/login_button_selector"
            android:text="vol-"
            android:layout_width="1dp"
            android:layout_weight="0.85"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_vol"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.3"
            android:text="9"
            android:textSize="18sp"
            />

        <Button
            android:layout_gravity="center"
            android:id="@+id/vol_add"
            android:layout_margin="5dp"
            android:background="@drawable/login_button_selector"
            android:text="vol+"
            android:layout_width="1dp"
            android:layout_weight="0.85"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_speaker_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="按住屏幕开始对讲,松开屏幕结束对讲."
        />

    </LinearLayout>